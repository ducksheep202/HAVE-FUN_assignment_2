<%- include ('partials/header') %>
<title>customerAccount</title>

    
<%- include ('partials/header2') %>
<body  style="background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);"></body>

<!-- Hiển thị thông tin cá nhân -->

<section>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <div class="profile-picture">
                            <img src="<%= user.profilePicture %>" alt="Profile Picture" width="250">
                        </div>
                        <h5 class="my-3">User Information</h5>
                        
                        <div class="d-flex justify-content-center mb-2">
                            <form action="/updateProfile" method="POST" enctype="multipart/form-data">
                            <% if (user.userType === 'customer') { %>
                                <input type="file" name="newProfilePicture" accept="image/*" style="display: none;">
                                <label for="fileInput" class="btn btn-primary">Update Picture</label>
                            <% } %>
                           
                           
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <%  if (user.userType === 'customer') { %>
                                <p class="text-muted mb-0"><%= user.name %></p>
                                <% } %>
                            
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <%  if (user.userType === 'customer') { %>
                                    <p class="text-muted mb-0"><%= user.address %></p>
                                <% } %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Update Name</p>
                            </div>
                            <div class="col-sm-9">
                                
                                    <% if (user.userType === 'customer') { %>
                                        <input type="text" name="newName" placeholder="Insert Your New Name">
                                    <% } %>   
                                
                                
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Update Address</p>
                            </div>
                            <div class="col-sm-9">
                                
                                    <% if (user.userType === 'customer') { %>
                                        <input type="text" name="newAddress" placeholder="Insert Your New Address">
                                    <% } %>   
                                
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
<script>
    // Listen to the button click "Update Picture"
document.querySelector('.btn.btn-primary').addEventListener('click', function() {
    // Activate input type file
    document.querySelector('input[type="file"]').click();
});


</script>    

